<button {{action 'expandOrErase' bubbles=false}} class='upf-btn upf-btn--default expanding-search__submit'>
  {{#if expandedSearch}}
    <i class='fa fa-close'></i>
  {{else}}
    <i class='fa fa-search'></i>
  {{/if}}
</button>

{{input
  type='text'
  class=(concat 'form-control upf-input expanding-search__input' (if small ' upf-input--small'))
  placeholder=placeholder
  value=searchQuery
}}