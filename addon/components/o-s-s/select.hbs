<div class="oss-select-container fx-1 {{if @disabled 'oss-select-container--disabled'}}"
     {{did-insert (fn this.ensureBlockPresence (has-block "option"))}}
     ...attributes>
  <div class="upf-input fx-row fx-1 fx-xalign-center">
    <div class="fx-row fx-1 fx-malign-space-between fx-xalign-center" role="button" {{on "click" this.toggleSelector}}>
      {{#if @value}}
        <span>{{@value.name}}</span>
      {{else}}
        <span class="text-color-default-light">{{this.placeholder}}</span>
      {{/if}}
      {{#if this.displaySelect}}
        <i class="far fa-chevron-up margin-left-xxx-sm"></i>
      {{else}}
        <i class="far fa-chevron-down margin-left-xxx-sm"></i>
      {{/if}}
    </div>
  </div>

  {{#if this.displaySelect}}
    <OSS::InfiniteSelect
      @items={{this.filteredItems}}
      @onSearch={{this.onSearch}}
      @onSelect={{this.onSelect}}
      @searchEnabled={{this.searchEnabled}}
      @searchPlaceholder={{t "oss-components.select.search"}}
      {{on-click-outside this.hideSelector}}>
      <:option as |item|>
        <div class="item-wrapper fx-row fx-xalign-center fx-malign-space-between {{if (eq @value item) 'selected'}}">
          {{#if (has-block "option")}}
            {{yield item to="option"}}
          {{/if}}

          {{#if (eq @value item)}}
            <i class="far fa-check text-color-bright-purple padding-right-px-6"></i>
          {{/if}}
        </div>
      </:option>
    </OSS::InfiniteSelect>
  {{/if}}
</div>
