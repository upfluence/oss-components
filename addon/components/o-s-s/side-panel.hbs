<div
  class="oss-side-panel__container {{if @visible 'oss-side-panel__container--visible'}}"
  {{will-destroy this.onDestroy}}
>
  <div
    class="oss-side-panel__backdrop {{unless @backdrop 'oss-side-panel__backdrop--transparent'}}"
    {{on "click" @onClose}}
    {{on-click-outside this.onClickOutside}}
    {{did-insert this.initialize}}
  />
  <div class="oss-side-panel {{this.sidePanelSize}} {{unless @visible 'oss-side-panel--closed'}}">
    {{#if (has-block "header")}}
      <header class="oss-side-panel__header">
        {{yield to="header"}}
      </header>
    {{/if}}
    {{#if (has-block "content")}}
      <div class="oss-side-panel__content fx-col fx-1">
        {{yield to="content"}}
      </div>
    {{/if}}
    {{#if (has-block "footer")}}
      <footer class="oss-side-panel__footer fx-row fx-xalign-center">
        {{yield to="footer"}}
      </footer>
    {{/if}}
  </div>
</div>