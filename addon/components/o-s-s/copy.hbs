{{#if this.accessibleClipboard}}
  {{#if this.inline}}
    <OSS::Icon
      @icon={{this.icon}}
      class="oss-copy--inline"
      {{on "click" this.copy}}
      {{enable-tooltip placement="top" title=(t "oss-components.copy.tooltip") trigger="hover"}}
      data-control-name="copy-content-button"
      ...attributes
    />
  {{else}}
    <OSS::Button
      @icon={{this.icon}}
      @square={{true}}
      @size="sm"
      {{on "click" this.copy}}
      {{enable-tooltip placement="top" title=(t "oss-components.copy.tooltip") trigger="hover"}}
      data-control-name="copy-content-button"
      ...attributes
    />
  {{/if}}
{{/if}}