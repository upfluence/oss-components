<div class={{this.computedClass}} ...attributes>
  {{#unless @loading}}
    {{#if this.displayInitials}}
      <span class="text-style-uppercase">{{@initials}}</span>
    {{else}}
      <img src={{this.image}} alt="avatar" class={{this.imageClass}} onerror={{this.imageLoadError}} loading="lazy" />
    {{/if}}
  {{/unless}}
</div>