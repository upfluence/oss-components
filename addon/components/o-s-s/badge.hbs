<div class={{this.computedClass}} ...attributes>
  {{#if @icon}}
    <OSS::Icon @style={{fa-icon-style @icon}} @icon={{fa-icon-value @icon}} />
  {{else if @image}}
    <img src={{@image}} alt={{t "oss-components.badge.image_alt"}} />
  {{else}}
    <span class="upf-badge__text">{{@text}}</span>
  {{/if}}
</div>